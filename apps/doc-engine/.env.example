# Doc Engine Environment Variables
# Copy this file to .env and fill in the required values
# Variables with (required) MUST be set for the application to work

# =============================================================================
# SERVER
# =============================================================================
# DOC_ENGINE_SERVER_PORT=8080
# DOC_ENGINE_SERVER_READ_TIMEOUT=30
# DOC_ENGINE_SERVER_WRITE_TIMEOUT=30
# DOC_ENGINE_SERVER_SHUTDOWN_TIMEOUT=10

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DOC_ENGINE_DATABASE_HOST=localhost
DOC_ENGINE_DATABASE_PORT=5432
DOC_ENGINE_DATABASE_USER=postgres
DOC_ENGINE_DATABASE_PASSWORD=your_password_here    # (required)
DOC_ENGINE_DATABASE_NAME=doc_assembly
# DOC_ENGINE_DATABASE_SSL_MODE=disable
# DOC_ENGINE_DATABASE_MAX_POOL_SIZE=10
# DOC_ENGINE_DATABASE_MIN_POOL_SIZE=2
# DOC_ENGINE_DATABASE_MAX_IDLE_TIME_SECONDS=300

# =============================================================================
# AUTH (Keycloak/JWKS)
# =============================================================================
DOC_ENGINE_AUTH_JWKS_URL=https://your-keycloak/realms/your-realm/protocol/openid-connect/certs    # (required)
DOC_ENGINE_AUTH_ISSUER=https://your-keycloak/realms/your-realm    # (required)
DOC_ENGINE_AUTH_AUDIENCE=account    # (required)

# =============================================================================
# INTERNAL API (service-to-service)
# =============================================================================
# DOC_ENGINE_INTERNAL_API_ENABLED=true
DOC_ENGINE_INTERNAL_API_API_KEY=your_api_key_here    # (required if internal API enabled)

# =============================================================================
# DOCUMENSO (e-signature provider)
# =============================================================================
DOC_ENGINE_DOCUMENSO_API_URL=https://app.documenso.com/api/v1
DOC_ENGINE_DOCUMENSO_API_KEY=your_documenso_api_key    # (required for signing)
# DOC_ENGINE_DOCUMENSO_WEBHOOK_SECRET=your_webhook_secret    # (required for webhooks)

# =============================================================================
# STORAGE (S3/MinIO)
# =============================================================================
# DOC_ENGINE_STORAGE_BUCKET=contracts-bucket
# DOC_ENGINE_STORAGE_REGION=us-east-1
# DOC_ENGINE_STORAGE_ENDPOINT=    # For MinIO local development

# =============================================================================
# LOGGING
# =============================================================================
# DOC_ENGINE_LOGGING_LEVEL=info    # debug, info, warn, error
# DOC_ENGINE_LOGGING_FORMAT=json   # json, text
