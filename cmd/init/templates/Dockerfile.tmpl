# Build stage
FROM golang:1.25-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /app/bin/{{.ProjectName}} .

# Runtime stage
FROM alpine:3.21
RUN apk add --no-cache ca-certificates

# Install Typst
COPY --from=ghcr.io/typst/typst:latest /usr/local/bin/typst /usr/local/bin/typst

WORKDIR /app
COPY --from=builder /app/bin/{{.ProjectName}} .
COPY settings/ ./settings/

EXPOSE 8080
CMD ["./{{.ProjectName}}"]
