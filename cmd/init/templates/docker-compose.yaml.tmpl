services:
  postgres:
    image: postgres:16-alpine
    environment:
      POSTGRES_DB: doc_assembly
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    # Change host port if 5432 is already in use (e.g., "5433:5432")
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 3s
      retries: 5

volumes:
  # Data persists across restarts. Use 'docker volume rm' to reset.
  pgdata:
