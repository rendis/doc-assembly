<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="tags:table_creation" author="doc-assembly">
        <comment>Create tags table - cross-cutting labels for resources</comment>
        <createTable tableName="tags" schemaName="organizer">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workspace_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(7)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ"/>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="tags:add_fk_constraint:workspace_id" author="doc-assembly">
        <comment>FK to workspaces</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="organizer"
            baseTableName="tags"
            baseColumnNames="workspace_id"
            constraintName="fk_tags_workspace_id"
            referencedTableSchemaName="tenancy"
            referencedTableName="workspaces"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS ========== -->

    <changeSet id="tags:add_unique_constraint:workspace_id_name" author="doc-assembly">
        <comment>Unique tag names per workspace</comment>
        <addUniqueConstraint
            schemaName="organizer"
            tableName="tags"
            columnNames="workspace_id, name"
            constraintName="uq_tags_workspace_name"/>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="tags:index_creation:workspace_id" author="doc-assembly">
        <comment>Index for workspace-based lookups</comment>
        <createIndex indexName="idx_tags_workspace_id" tableName="tags" schemaName="organizer">
            <column name="workspace_id"/>
        </createIndex>
    </changeSet>

    <!-- ========== CHECK CONSTRAINT ========== -->

    <changeSet id="tags:add_check_constraint:color_format" author="doc-assembly">
        <comment>Validate HEX color format (#RRGGBB)</comment>
        <sql>
            ALTER TABLE organizer.tags
            ADD CONSTRAINT chk_tags_color_format
            CHECK (color IS NULL OR color ~ '^#[0-9A-Fa-f]{6}$');
        </sql>
        <rollback>ALTER TABLE organizer.tags DROP CONSTRAINT IF EXISTS chk_tags_color_format;</rollback>
    </changeSet>

    <!-- ========== TRIGGER ========== -->

    <changeSet id="tags:trigger:updated_at" author="doc-assembly">
        <comment>Trigger to auto-update updated_at on modification</comment>
        <sql>
            CREATE TRIGGER trigger_tags_updated_at
            BEFORE UPDATE ON organizer.tags
            FOR EACH ROW EXECUTE FUNCTION update_updated_at_column();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_tags_updated_at ON organizer.tags;</rollback>
    </changeSet>

</databaseChangeLog>
