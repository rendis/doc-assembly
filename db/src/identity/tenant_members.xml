<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="tenant_members:table_creation" author="doc-assembly">
        <comment>Create tenant_members table - tenant-level access relationships</comment>
        <createTable tableName="tenant_members" schemaName="identity">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="tenant_role">
                <constraints nullable="false"/>
            </column>
            <column name="membership_status" type="membership_status" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
            <column name="granted_by" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="tenant_members:add_fk_constraint:tenant_id" author="doc-assembly">
        <comment>FK to tenants</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="identity"
            baseTableName="tenant_members"
            baseColumnNames="tenant_id"
            constraintName="fk_tenant_members_tenant_id"
            referencedTableSchemaName="tenancy"
            referencedTableName="tenants"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="tenant_members:add_fk_constraint:user_id" author="doc-assembly">
        <comment>FK to users</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="identity"
            baseTableName="tenant_members"
            baseColumnNames="user_id"
            constraintName="fk_tenant_members_user_id"
            referencedTableSchemaName="identity"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="tenant_members:add_fk_constraint:granted_by" author="doc-assembly">
        <comment>FK to users for granter tracking</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="identity"
            baseTableName="tenant_members"
            baseColumnNames="granted_by"
            constraintName="fk_tenant_members_granted_by"
            referencedTableSchemaName="identity"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS ========== -->

    <changeSet id="tenant_members:add_unique_constraint:tenant_id_user_id" author="doc-assembly">
        <comment>One role per user per tenant</comment>
        <addUniqueConstraint
            schemaName="identity"
            tableName="tenant_members"
            columnNames="tenant_id, user_id"
            constraintName="uq_tenant_members_tenant_user"/>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="tenant_members:index_creation:tenant_id" author="doc-assembly">
        <comment>Index for tenant-based lookups</comment>
        <createIndex indexName="idx_tenant_members_tenant_id" tableName="tenant_members" schemaName="identity">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="tenant_members:index_creation:user_id" author="doc-assembly">
        <comment>Index for user-based lookups</comment>
        <createIndex indexName="idx_tenant_members_user_id" tableName="tenant_members" schemaName="identity">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="tenant_members:index_creation:role" author="doc-assembly">
        <comment>Index for role filtering</comment>
        <createIndex indexName="idx_tenant_members_role" tableName="tenant_members" schemaName="identity">
            <column name="role"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
