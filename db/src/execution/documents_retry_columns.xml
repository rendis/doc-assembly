<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== ADD RETRY COLUMNS ========== -->

    <changeSet id="documents:add_column:retry_count" author="doc-assembly">
        <comment>Add retry_count column for tracking retry attempts on failed documents</comment>
        <addColumn tableName="documents" schemaName="execution">
            <column name="retry_count" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="documents:add_column:last_retry_at" author="doc-assembly">
        <comment>Add last_retry_at timestamp for tracking when the last retry was attempted</comment>
        <addColumn tableName="documents" schemaName="execution">
            <column name="last_retry_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="documents:add_column:next_retry_at" author="doc-assembly">
        <comment>Add next_retry_at timestamp for scheduling the next retry attempt</comment>
        <addColumn tableName="documents" schemaName="execution">
            <column name="next_retry_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- ========== INDEX FOR RETRY POLLING ========== -->

    <changeSet id="documents:index_creation:status_next_retry_at" author="doc-assembly">
        <comment>Composite index for efficient retry polling queries (status + next_retry_at)</comment>
        <createIndex indexName="idx_documents_status_next_retry_at" tableName="documents" schemaName="execution">
            <column name="status"/>
            <column name="next_retry_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
