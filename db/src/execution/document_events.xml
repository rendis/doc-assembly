<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="document_events:table_creation" author="doc-assembly">
        <comment>Create document_events table - audit trail for document lifecycle events</comment>
        <createTable tableName="document_events" schemaName="execution">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="document_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="event_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="actor_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="actor_id" type="VARCHAR(255)"/>
            <column name="old_status" type="VARCHAR(30)"/>
            <column name="new_status" type="VARCHAR(30)"/>
            <column name="recipient_id" type="uuid"/>
            <column name="metadata" type="JSONB"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="document_events:fk:document_id" author="doc-assembly">
        <comment>FK to documents - events belong to a document</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="execution"
            baseTableName="document_events"
            baseColumnNames="document_id"
            constraintName="fk_document_events_document_id"
            referencedTableSchemaName="execution"
            referencedTableName="documents"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="document_events:index:document_id" author="doc-assembly">
        <comment>Index for document-based lookups</comment>
        <createIndex tableName="document_events" schemaName="execution" indexName="idx_document_events_document_id">
            <column name="document_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="document_events:index:event_type" author="doc-assembly">
        <comment>Index for event type filtering</comment>
        <createIndex tableName="document_events" schemaName="execution" indexName="idx_document_events_event_type">
            <column name="event_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="document_events:index:created_at" author="doc-assembly">
        <comment>Index for date-based queries and sorting</comment>
        <createIndex tableName="document_events" schemaName="execution" indexName="idx_document_events_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
