<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="document_status:add:pending_provider" author="system">
        <comment>Add PENDING_PROVIDER status for worker-based signing provider upload</comment>
        <sql>ALTER TYPE document_status ADD VALUE 'PENDING_PROVIDER' BEFORE 'PENDING';</sql>
        <rollback>
            <!-- ENUMs in PostgreSQL cannot remove values; rollback requires recreating the type -->
        </rollback>
    </changeSet>

</databaseChangeLog>
