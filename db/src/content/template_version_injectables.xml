<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="template_version_injectables:table_creation" author="doc-assembly">
        <comment>Create template_version_injectables table - variable configuration per template version</comment>
        <createTable tableName="template_version_injectables" schemaName="content">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="template_version_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="injectable_definition_id" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="system_injectable_key" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="is_required" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="default_value" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="template_version_injectables:add_fk_constraint:template_version_id" author="doc-assembly">
        <comment>FK to template_versions</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_version_injectables"
            baseColumnNames="template_version_id"
            constraintName="fk_template_version_injectables_template_version_id"
            referencedTableSchemaName="content"
            referencedTableName="template_versions"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="template_version_injectables:add_fk_constraint:injectable_definition_id" author="doc-assembly">
        <comment>FK to injectable_definitions</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_version_injectables"
            baseColumnNames="injectable_definition_id"
            constraintName="fk_template_version_injectables_injectable_definition_id"
            referencedTableSchemaName="content"
            referencedTableName="injectable_definitions"
            referencedColumnNames="id"
            onDelete="RESTRICT"/>
    </changeSet>

    <changeSet id="template_version_injectables:add_fk_constraint:system_injectable_key" author="doc-assembly">
        <comment>FK to system_injectable_definitions</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_version_injectables"
            baseColumnNames="system_injectable_key"
            constraintName="fk_template_version_injectables_system_injectable_key"
            referencedTableSchemaName="content"
            referencedTableName="system_injectable_definitions"
            referencedColumnNames="key"
            onDelete="RESTRICT"/>
    </changeSet>

    <!-- ========== CHECK CONSTRAINTS ========== -->

    <changeSet id="template_version_injectables:check_constraint:injectable_source_xor" author="doc-assembly">
        <comment>Ensure exactly one of injectable_definition_id or system_injectable_key is set</comment>
        <sql>
            ALTER TABLE content.template_version_injectables
            ADD CONSTRAINT chk_injectable_source_xor CHECK (
                (injectable_definition_id IS NOT NULL AND system_injectable_key IS NULL) OR
                (injectable_definition_id IS NULL AND system_injectable_key IS NOT NULL)
            );
        </sql>
        <rollback>
            ALTER TABLE content.template_version_injectables DROP CONSTRAINT chk_injectable_source_xor;
        </rollback>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS ========== -->

    <changeSet id="template_version_injectables:add_unique_constraint:version_injectable_definition" author="doc-assembly">
        <comment>Prevent duplicate injectable_definition assignments per template version</comment>
        <sql>
            CREATE UNIQUE INDEX idx_tvi_unique_version_injectable_definition
            ON content.template_version_injectables (template_version_id, injectable_definition_id)
            WHERE injectable_definition_id IS NOT NULL;
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_tvi_unique_version_injectable_definition;</rollback>
    </changeSet>

    <changeSet id="template_version_injectables:add_unique_constraint:version_system_injectable" author="doc-assembly">
        <comment>Prevent duplicate system_injectable assignments per template version</comment>
        <sql>
            CREATE UNIQUE INDEX idx_tvi_unique_version_system_injectable
            ON content.template_version_injectables (template_version_id, system_injectable_key)
            WHERE system_injectable_key IS NOT NULL;
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_tvi_unique_version_system_injectable;</rollback>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="template_version_injectables:index_creation:template_version_id" author="doc-assembly">
        <comment>Index for template version-based lookups</comment>
        <createIndex indexName="idx_template_version_injectables_template_version_id" tableName="template_version_injectables" schemaName="content">
            <column name="template_version_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="template_version_injectables:index_creation:injectable_definition_id" author="doc-assembly">
        <comment>Index for injectable definition lookups</comment>
        <createIndex indexName="idx_template_version_injectables_injectable_definition_id" tableName="template_version_injectables" schemaName="content">
            <column name="injectable_definition_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="template_version_injectables:index_creation:system_injectable_key" author="doc-assembly">
        <comment>Index for system injectable key lookups</comment>
        <createIndex indexName="idx_template_version_injectables_system_injectable_key" tableName="template_version_injectables" schemaName="content">
            <column name="system_injectable_key"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
