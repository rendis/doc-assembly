<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="document_types:table_creation" author="doc-assembly">
        <comment>Create document_types table - tenant-scoped classification for templates</comment>
        <createTable tableName="document_types" schemaName="content">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="JSONB"/>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ"/>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="document_types:add_fk_constraint:tenant_id" author="doc-assembly">
        <comment>FK to tenants</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="document_types"
            baseColumnNames="tenant_id"
            constraintName="fk_document_types_tenant_id"
            referencedTableSchemaName="tenancy"
            referencedTableName="tenants"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS ========== -->

    <changeSet id="document_types:unique_constraint:tenant_code" author="doc-assembly">
        <comment>Unique code per tenant</comment>
        <addUniqueConstraint
            schemaName="content"
            tableName="document_types"
            columnNames="tenant_id, code"
            constraintName="uq_document_types_tenant_code"/>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="document_types:index_creation:tenant_id" author="doc-assembly">
        <comment>Index for tenant-based lookups</comment>
        <createIndex indexName="idx_document_types_tenant_id" tableName="document_types" schemaName="content">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="document_types:index_creation:code" author="doc-assembly">
        <comment>Index for code-based lookups</comment>
        <createIndex indexName="idx_document_types_code" tableName="document_types" schemaName="content">
            <column name="code"/>
        </createIndex>
    </changeSet>

    <!-- ========== TRIGGERS ========== -->

    <changeSet id="document_types:trigger:updated_at" author="doc-assembly">
        <comment>Trigger to auto-update updated_at on modification</comment>
        <sql>
            CREATE TRIGGER trigger_document_types_updated_at
            BEFORE UPDATE ON content.document_types
            FOR EACH ROW EXECUTE FUNCTION update_updated_at_column();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_document_types_updated_at ON content.document_types;</rollback>
    </changeSet>

    <changeSet id="document_types:function:protect_code" author="doc-assembly">
        <comment>Function to prevent code modification after creation</comment>
        <sql splitStatements="false">
            CREATE OR REPLACE FUNCTION content.protect_document_type_code()
            RETURNS TRIGGER AS $$
            BEGIN
                IF OLD.code IS DISTINCT FROM NEW.code THEN
                    RAISE EXCEPTION 'Document type code cannot be modified after creation';
                END IF;
                RETURN NEW;
            END;
            $$ LANGUAGE plpgsql;
        </sql>
        <rollback>DROP FUNCTION IF EXISTS content.protect_document_type_code();</rollback>
    </changeSet>

    <changeSet id="document_types:trigger:protect_code" author="doc-assembly">
        <comment>Trigger to prevent code modification</comment>
        <sql>
            CREATE TRIGGER trigger_document_types_protect_code
            BEFORE UPDATE ON content.document_types
            FOR EACH ROW EXECUTE FUNCTION content.protect_document_type_code();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_document_types_protect_code ON content.document_types;</rollback>
    </changeSet>

</databaseChangeLog>
