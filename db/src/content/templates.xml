<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="templates:table_creation" author="doc-assembly">
        <comment>Create templates table - the document blueprint (metadata only, content in template_versions)</comment>
        <createTable tableName="templates" schemaName="content">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workspace_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="folder_id" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_public_library" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ"/>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="templates:add_fk_constraint:workspace_id" author="doc-assembly">
        <comment>FK to workspaces</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="templates"
            baseColumnNames="workspace_id"
            constraintName="fk_templates_workspace_id"
            referencedTableSchemaName="tenancy"
            referencedTableName="workspaces"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="templates:add_fk_constraint:folder_id" author="doc-assembly">
        <comment>FK to folders</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="templates"
            baseColumnNames="folder_id"
            constraintName="fk_templates_folder_id"
            referencedTableSchemaName="organizer"
            referencedTableName="folders"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="templates:index_creation:workspace_id" author="doc-assembly">
        <comment>Index for workspace-based lookups</comment>
        <createIndex indexName="idx_templates_workspace_id" tableName="templates" schemaName="content">
            <column name="workspace_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="templates:index_creation:folder_id" author="doc-assembly">
        <comment>Index for folder-based lookups</comment>
        <createIndex indexName="idx_templates_folder_id" tableName="templates" schemaName="content">
            <column name="folder_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="templates:index_creation:is_public_library" author="doc-assembly">
        <comment>Index for public library queries</comment>
        <createIndex indexName="idx_templates_is_public_library" tableName="templates" schemaName="content">
            <column name="is_public_library"/>
        </createIndex>
    </changeSet>

    <changeSet id="templates:trgm_index_creation:title" author="doc-assembly">
        <comment>Trigram index for fuzzy title search</comment>
        <sql>
            CREATE INDEX idx_templates_title_trgm
            ON content.templates USING GIN (title gin_trgm_ops);
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_templates_title_trgm;</rollback>
    </changeSet>

    <!-- ========== TRIGGER ========== -->

    <changeSet id="templates:trigger:updated_at" author="doc-assembly">
        <comment>Trigger to auto-update updated_at on modification</comment>
        <sql>
            CREATE TRIGGER trigger_templates_updated_at
            BEFORE UPDATE ON content.templates
            FOR EACH ROW EXECUTE FUNCTION update_updated_at_column();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_templates_updated_at ON content.templates;</rollback>
    </changeSet>

</databaseChangeLog>
