<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="system_injectable_definitions:table_creation" author="doc-assembly">
        <comment>Create system_injectable_definitions table - registry of system injectables defined in code</comment>
        <createTable tableName="system_injectable_definitions" schemaName="content">
            <column name="key" type="VARCHAR(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ"/>
        </createTable>
    </changeSet>

    <!-- ========== TRIGGER ========== -->

    <changeSet id="system_injectable_definitions:trigger:updated_at" author="doc-assembly">
        <comment>Trigger to auto-update updated_at on modification</comment>
        <sql>
            CREATE TRIGGER trigger_system_injectable_definitions_updated_at
            BEFORE UPDATE ON content.system_injectable_definitions
            FOR EACH ROW EXECUTE FUNCTION update_updated_at_column();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_system_injectable_definitions_updated_at ON content.system_injectable_definitions;</rollback>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="system_injectable_definitions:index_creation:is_active" author="doc-assembly">
        <comment>Index for filtering by active status</comment>
        <createIndex indexName="idx_system_injectable_definitions_is_active" tableName="system_injectable_definitions" schemaName="content">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
