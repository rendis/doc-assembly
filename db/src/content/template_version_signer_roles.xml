<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="template_version_signer_roles:table_creation" author="doc-assembly">
        <comment>Create template_version_signer_roles table - signing role configuration per template version</comment>
        <createTable tableName="template_version_signer_roles" schemaName="content">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="template_version_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="role_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="anchor_string" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="signer_order" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ"/>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="template_version_signer_roles:add_fk_constraint:template_version_id" author="doc-assembly">
        <comment>FK to template_versions</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_version_signer_roles"
            baseColumnNames="template_version_id"
            constraintName="fk_template_version_signer_roles_template_version_id"
            referencedTableSchemaName="content"
            referencedTableName="template_versions"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS ========== -->

    <changeSet id="template_version_signer_roles:add_unique_constraint:version_role_name" author="doc-assembly">
        <comment>Unique role names per template version</comment>
        <addUniqueConstraint
            schemaName="content"
            tableName="template_version_signer_roles"
            columnNames="template_version_id, role_name"
            constraintName="uq_template_version_signer_roles_version_role_name"/>
    </changeSet>

    <changeSet id="template_version_signer_roles:add_unique_constraint:version_anchor" author="doc-assembly">
        <comment>Unique anchor strings per template version</comment>
        <addUniqueConstraint
            schemaName="content"
            tableName="template_version_signer_roles"
            columnNames="template_version_id, anchor_string"
            constraintName="uq_template_version_signer_roles_version_anchor"/>
    </changeSet>

    <changeSet id="template_version_signer_roles:add_unique_constraint:version_order" author="doc-assembly">
        <comment>Unique signer order per template version</comment>
        <addUniqueConstraint
            schemaName="content"
            tableName="template_version_signer_roles"
            columnNames="template_version_id, signer_order"
            constraintName="uq_template_version_signer_roles_version_order"/>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="template_version_signer_roles:index_creation:template_version_id" author="doc-assembly">
        <comment>Index for template version-based lookups</comment>
        <createIndex indexName="idx_template_version_signer_roles_template_version_id" tableName="template_version_signer_roles" schemaName="content">
            <column name="template_version_id"/>
        </createIndex>
    </changeSet>

    <!-- ========== TRIGGER ========== -->

    <changeSet id="template_version_signer_roles:trigger:updated_at" author="doc-assembly">
        <comment>Trigger to auto-update updated_at on modification</comment>
        <sql>
            CREATE TRIGGER trigger_template_version_signer_roles_updated_at
            BEFORE UPDATE ON content.template_version_signer_roles
            FOR EACH ROW EXECUTE FUNCTION update_updated_at_column();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_template_version_signer_roles_updated_at ON content.template_version_signer_roles;</rollback>
    </changeSet>

</databaseChangeLog>
