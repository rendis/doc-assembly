<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="system_injectable_assignments:table_creation" author="doc-assembly">
        <comment>Create system_injectable_assignments table - controls where system injectables are available</comment>
        <createTable tableName="system_injectable_assignments" schemaName="content">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="injectable_key" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="scope_type" type="injectable_scope_type">
                <constraints nullable="false"/>
            </column>
            <column name="tenant_id" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="workspace_id" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ========== CHECK CONSTRAINT ========== -->

    <changeSet id="system_injectable_assignments:check_constraint:scope_target" author="doc-assembly">
        <comment>Ensure scope_type matches the presence of tenant_id/workspace_id</comment>
        <sql>
            ALTER TABLE content.system_injectable_assignments
            ADD CONSTRAINT chk_scope_target_consistency CHECK (
                (scope_type = 'PUBLIC' AND tenant_id IS NULL AND workspace_id IS NULL) OR
                (scope_type = 'TENANT' AND tenant_id IS NOT NULL AND workspace_id IS NULL) OR
                (scope_type = 'WORKSPACE' AND workspace_id IS NOT NULL AND tenant_id IS NULL)
            );
        </sql>
        <rollback>
            ALTER TABLE content.system_injectable_assignments DROP CONSTRAINT chk_scope_target_consistency;
        </rollback>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="system_injectable_assignments:add_fk_constraint:injectable_key" author="doc-assembly">
        <comment>FK to system_injectable_definitions</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="system_injectable_assignments"
            baseColumnNames="injectable_key"
            constraintName="fk_system_injectable_assignments_injectable_key"
            referencedTableSchemaName="content"
            referencedTableName="system_injectable_definitions"
            referencedColumnNames="key"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="system_injectable_assignments:add_fk_constraint:tenant_id" author="doc-assembly">
        <comment>FK to tenants</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="system_injectable_assignments"
            baseColumnNames="tenant_id"
            constraintName="fk_system_injectable_assignments_tenant_id"
            referencedTableSchemaName="tenancy"
            referencedTableName="tenants"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="system_injectable_assignments:add_fk_constraint:workspace_id" author="doc-assembly">
        <comment>FK to workspaces</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="system_injectable_assignments"
            baseColumnNames="workspace_id"
            constraintName="fk_system_injectable_assignments_workspace_id"
            referencedTableSchemaName="tenancy"
            referencedTableName="workspaces"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS (Partial Indexes) ========== -->

    <changeSet id="system_injectable_assignments:unique_index:public" author="doc-assembly">
        <comment>Unique constraint for PUBLIC scope - only one per key</comment>
        <sql>
            CREATE UNIQUE INDEX idx_system_injectable_assignments_unique_public
            ON content.system_injectable_assignments (injectable_key)
            WHERE scope_type = 'PUBLIC';
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_system_injectable_assignments_unique_public;</rollback>
    </changeSet>

    <changeSet id="system_injectable_assignments:unique_index:tenant" author="doc-assembly">
        <comment>Unique constraint for TENANT scope - one per (key, tenant_id)</comment>
        <sql>
            CREATE UNIQUE INDEX idx_system_injectable_assignments_unique_tenant
            ON content.system_injectable_assignments (injectable_key, tenant_id)
            WHERE scope_type = 'TENANT';
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_system_injectable_assignments_unique_tenant;</rollback>
    </changeSet>

    <changeSet id="system_injectable_assignments:unique_index:workspace" author="doc-assembly">
        <comment>Unique constraint for WORKSPACE scope - one per (key, workspace_id)</comment>
        <sql>
            CREATE UNIQUE INDEX idx_system_injectable_assignments_unique_workspace
            ON content.system_injectable_assignments (injectable_key, workspace_id)
            WHERE scope_type = 'WORKSPACE';
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_system_injectable_assignments_unique_workspace;</rollback>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="system_injectable_assignments:index_creation:injectable_key" author="doc-assembly">
        <comment>Index for injectable key lookups</comment>
        <createIndex indexName="idx_system_injectable_assignments_injectable_key" tableName="system_injectable_assignments" schemaName="content">
            <column name="injectable_key"/>
        </createIndex>
    </changeSet>

    <changeSet id="system_injectable_assignments:index_creation:scope_type" author="doc-assembly">
        <comment>Index for scope type filtering</comment>
        <createIndex indexName="idx_system_injectable_assignments_scope_type" tableName="system_injectable_assignments" schemaName="content">
            <column name="scope_type"/>
        </createIndex>
    </changeSet>

    <changeSet id="system_injectable_assignments:index_creation:tenant_id" author="doc-assembly">
        <comment>Index for tenant-based lookups</comment>
        <createIndex indexName="idx_system_injectable_assignments_tenant_id" tableName="system_injectable_assignments" schemaName="content">
            <column name="tenant_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="system_injectable_assignments:index_creation:workspace_id" author="doc-assembly">
        <comment>Index for workspace-based lookups</comment>
        <createIndex indexName="idx_system_injectable_assignments_workspace_id" tableName="system_injectable_assignments" schemaName="content">
            <column name="workspace_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="system_injectable_assignments:index_creation:is_active" author="doc-assembly">
        <comment>Index for filtering by active status</comment>
        <createIndex indexName="idx_system_injectable_assignments_is_active" tableName="system_injectable_assignments" schemaName="content">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
