<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ========== TABLE CREATION ========== -->

    <changeSet id="template_versions:table_creation" author="doc-assembly">
        <comment>Create template_versions table - versioned content for templates</comment>
        <createTable tableName="template_versions" schemaName="content">
            <column name="id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="template_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="version_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="content_structure" type="JSONB">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="version_status" defaultValue="DRAFT">
                <constraints nullable="false"/>
            </column>
            <column name="scheduled_publish_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
            <column name="scheduled_archive_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
            <column name="published_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
            <column name="archived_at" type="TIMESTAMPTZ">
                <constraints nullable="true"/>
            </column>
            <column name="published_by" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="archived_by" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="uuid">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ"/>
        </createTable>
    </changeSet>

    <!-- ========== FOREIGN KEYS ========== -->

    <changeSet id="template_versions:add_fk_constraint:template_id" author="doc-assembly">
        <comment>FK to templates</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_versions"
            baseColumnNames="template_id"
            constraintName="fk_template_versions_template_id"
            referencedTableSchemaName="content"
            referencedTableName="templates"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="template_versions:add_fk_constraint:published_by" author="doc-assembly">
        <comment>FK to users for publish audit</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_versions"
            baseColumnNames="published_by"
            constraintName="fk_template_versions_published_by"
            referencedTableSchemaName="identity"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="template_versions:add_fk_constraint:archived_by" author="doc-assembly">
        <comment>FK to users for archive audit</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_versions"
            baseColumnNames="archived_by"
            constraintName="fk_template_versions_archived_by"
            referencedTableSchemaName="identity"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="template_versions:add_fk_constraint:created_by" author="doc-assembly">
        <comment>FK to users for creation audit</comment>
        <addForeignKeyConstraint
            baseTableSchemaName="content"
            baseTableName="template_versions"
            baseColumnNames="created_by"
            constraintName="fk_template_versions_created_by"
            referencedTableSchemaName="identity"
            referencedTableName="users"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

    <!-- ========== UNIQUE CONSTRAINTS ========== -->

    <changeSet id="template_versions:add_unique_constraint:version_number" author="doc-assembly">
        <comment>Unique version number per template</comment>
        <addUniqueConstraint
            schemaName="content"
            tableName="template_versions"
            columnNames="template_id, version_number"
            constraintName="uq_template_versions_template_version_number"/>
    </changeSet>

    <changeSet id="template_versions:add_unique_constraint:name" author="doc-assembly">
        <comment>Unique version name per template</comment>
        <addUniqueConstraint
            schemaName="content"
            tableName="template_versions"
            columnNames="template_id, name"
            constraintName="uq_template_versions_template_name"/>
    </changeSet>

    <!-- ========== EXCLUSION CONSTRAINT ========== -->

    <changeSet id="template_versions:add_exclusion_constraint:single_published" author="doc-assembly">
        <comment>Only one PUBLISHED version per template allowed</comment>
        <sql>
            ALTER TABLE content.template_versions
            ADD CONSTRAINT chk_template_versions_single_published
            EXCLUDE USING btree (template_id WITH =)
            WHERE (status = 'PUBLISHED');
        </sql>
        <rollback>
            ALTER TABLE content.template_versions DROP CONSTRAINT IF EXISTS chk_template_versions_single_published;
        </rollback>
    </changeSet>

    <!-- ========== INDEXES ========== -->

    <changeSet id="template_versions:index_creation:template_id" author="doc-assembly">
        <comment>Index for template-based lookups</comment>
        <createIndex indexName="idx_template_versions_template_id" tableName="template_versions" schemaName="content">
            <column name="template_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="template_versions:index_creation:status" author="doc-assembly">
        <comment>Index for status filtering</comment>
        <createIndex indexName="idx_template_versions_status" tableName="template_versions" schemaName="content">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <changeSet id="template_versions:partial_index:published" author="doc-assembly">
        <comment>Partial index for finding published versions quickly</comment>
        <sql>
            CREATE INDEX idx_template_versions_published
            ON content.template_versions(template_id)
            WHERE status = 'PUBLISHED';
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_template_versions_published;</rollback>
    </changeSet>

    <changeSet id="template_versions:partial_index:scheduled" author="doc-assembly">
        <comment>Partial index for scheduled versions (for cron jobs)</comment>
        <sql>
            CREATE INDEX idx_template_versions_scheduled
            ON content.template_versions(scheduled_publish_at)
            WHERE status = 'SCHEDULED';
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_template_versions_scheduled;</rollback>
    </changeSet>

    <changeSet id="template_versions:partial_index:to_archive" author="doc-assembly">
        <comment>Partial index for versions scheduled to archive</comment>
        <sql>
            CREATE INDEX idx_template_versions_to_archive
            ON content.template_versions(scheduled_archive_at)
            WHERE status = 'PUBLISHED' AND scheduled_archive_at IS NOT NULL;
        </sql>
        <rollback>DROP INDEX IF EXISTS content.idx_template_versions_to_archive;</rollback>
    </changeSet>

    <!-- ========== TRIGGER ========== -->

    <changeSet id="template_versions:trigger:updated_at" author="doc-assembly">
        <comment>Trigger to auto-update updated_at on modification</comment>
        <sql>
            CREATE TRIGGER trigger_template_versions_updated_at
            BEFORE UPDATE ON content.template_versions
            FOR EACH ROW EXECUTE FUNCTION update_updated_at_column();
        </sql>
        <rollback>DROP TRIGGER IF EXISTS trigger_template_versions_updated_at ON content.template_versions;</rollback>
    </changeSet>

</databaseChangeLog>
